@using MVC_Project_BookStore.ViewModel
@model AuthorFormViewModel
@section Title{
    Categoriesc
}
@section subTitle{
    @(Model?.Id == null ? "Create" : "Edit")
}

<form asp-controller="Authors">

    <div class="card-body">
        <div class="form-group">

    

            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="card-footer">
        <button typeof="submit" class="btn btn-primary">  @(Model?.Id == null ? "Add" : "Update")</button>

    </div>
</form>